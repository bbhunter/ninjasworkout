pipeline {
    agent any

    tools {
        nodejs "node"
        snyk "snyk" // Specify the Snyk tool
    }

    stages {
        stage("BUILD") {
            steps {
                echo "Starting building the Node.js application"
                sh 'npm install'
            }
        }

        stage("SECURITY TEST") {
            parallel {
                stage("SCA SCAN") {
                    steps {
                        echo "Running Snyk security test"
                        script {
                            def exitCode = sh(script: 'snyk test', returnStatus: true)
                            echo "Exit code: ${exitCode}"
                            if (exitCode != 0) {
                                error 'Snyk test failed'
                            }
                        }
                    }
                }
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed!'
        }
    }
}
