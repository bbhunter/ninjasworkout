pipeline {
    agent any

    tools {
        nodejs "node"
        snyk "snyk" // Specify the Snyk tool
    }

    stages {
        stage("BUILD") {
            steps {
                echo "Starting building the Node.js application"
                sh 'npm i'
            }
        }

        stage("SECURITY TEST") {
            parallel {
                stage("SCA SCAN") {
                    steps {
                        echo "Running Snyk security test"
                        // Run Snyk security test and capture the exit code
                        script {
                            def exitCode = sh(script: 'snyk test', returnStatus: true)
                            echo "Exit code: ${exitCode}"
                            if(${exitCode}>1) {

                            error 'error in running the snyk'
                            }
                        }
                    }
                }
            }
        }
    }

    post {
        failure {
            error 'Error in pipeline!'
        }
    }
}
