pipeline {
    agent any

    tools {
        nodejs "node"
        snyk "snyk" // Specify the Snyk tool
    }

    stages {
        stage("BUILD") {
            steps {
                echo "Starting building the Node.js application"
                sh 'npm i'
            }
        }

        stage("SECURITY TEST") {
            parallel {
                stage("SCA SCAN") {
                    steps {
                        echo "Running Snyk security test"
                         // Run Snyk security test
                         dependencyCheckPublisher pattern: '', unstableNewCritical: 0, unstableNewLow: 1, unstableTotalLow: 1
                    }
                }
            }
        }
    }

    post {
        failure {
            error 'Error in pipeline!'
        }
    }
}
