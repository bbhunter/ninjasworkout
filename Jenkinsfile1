pipeline {
    agent any

    tools {
        nodejs "node" 
          Snyk "snyk" 
    }

    stages {
        stage("BUILD") {
            steps {
                echo "Starting building the Node.js application"
                sh 'npm i'
            }
        }

        stage("SECURITY TEST") {
            parallel {
                stage("SCA SCAN") {
                    steps {
                       
                        sh 'snyk test' // Run Snyk security test
                    }
                }
            }
        }
    }

    post {
        failure {
            error 'Error in pipeline!'
        }
    }
}
