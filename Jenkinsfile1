pipeline {
    agent any

    tools {
        nodejs "node" // Specify the Node.js tool
           // Specify the Snyk tool
    }

    stages {
        stage("BUILD") {
            steps {
                echo "Starting building the Node.js application"
                sh 'npm i'
            }
        }

        stage("SECURITY TEST") {
            parallel {
                stage("SCA SCAN") {
                    steps {
                       sh 'npm i snyk'
                        sh 'snyk test' // Run Snyk security test
                    }
                }
            }
        }
    }

    post {
        failure {
            error 'Error in pipeline!'
        }
    }
}
